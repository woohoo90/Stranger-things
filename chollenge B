# Chollonge B
#snare two times
live_loop :snare do
  16.times do
    sample :drum_snare_soft
    sleep 2
  end
  stop
end
live_loop :drum  do
  12.times do
    sample :drum_heavy_kick, amp: 2
    sleep 1
  end
  stop
end
live_loop :cymbal  do
  8.times do
    sample :drum_cymbal_closed
    sleep 0.5
  end
  stop
end
live_loop :cymbal3  do
  4.times do
    sleep 20
    sample :drum_splash_hard
    sleep 2
  end
  stop
end
live_loop :cymbal2  do
  8.times do
    sleep 20
    sample :drum_cymbal_hard
    sleep 0.5
  end
  stop
end

